<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <com.app.l_pesa.common.CircularImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:contentDescription="@string/app_name"
            app:civ_background_color="@color/colorWhite"
            app:civ_border_color="@color/colorAppDeep"
            app:civ_border_width="0dp"
            app:civ_shadow="false" />

        <com.app.l_pesa.common.CommonTextRegular
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_toEndOf="@+id/imgProfile"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="1"
            android:textColor="#fff"
            android:textSize="@dimen/_12sdp" />

        <com.app.l_pesa.common.CommonTextRegular
            android:id="@+id/txtCreditScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_toEndOf="@+id/imgProfile"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="1"
            android:text="@string/credit_score"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/_11sdp" />

    </RelativeLayout>

</LinearLayout>