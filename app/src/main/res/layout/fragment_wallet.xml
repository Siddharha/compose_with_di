<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical"
    android:background="@color/colorSemiWhite">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="@color/colorWhite"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txtHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_2sdp"
                android:text="@string/lpesa_wallet_balance"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorSemiBlack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtWalletBal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/_14sdp"
                android:padding="@dimen/_2sdp"
                android:drawablePadding="@dimen/_1sdp"
                android:drawableStart="@drawable/ic_wallet_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtHeader"
                app:layout_constraintBottom_toTopOf="@+id/dividerOne"
                />

           <View
               android:id="@+id/dividerOne"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_1sdp"
               android:background="@color/divider_color"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txtWalletBal"
               android:layout_marginStart="@dimen/_15sdp"
               android:layout_marginEnd="@dimen/_15sdp"
               android:layout_marginTop="@dimen/_10sdp"
               />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>