<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/screenBackground"
   >

<LinearLayout
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_7sdp"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_175sdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_wallet_bg"
            android:padding="@dimen/_3sdp">

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/textWalletBal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/lpesa_wallet_balance"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txtWalletBal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_15sdp"
                android:layout_below="@+id/textWalletBal"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_7sdp"
                />



            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txtCommission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_11sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textColor="@color/colorWhite"
                android:text="@string/commission_for_l_pesa"
                android:gravity="center"
                android:layout_alignParentBottom="true"


                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_7sdp">

            <com.app.l_pesa.common.CommonInputLayout
                android:id="@+id/commonInputLayout5"
                style="@style/customInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toTopOf="@+id/buttonWithdraw"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.app.l_pesa.common.CommonEditTextRegular
                    android:id="@+id/etWithdrawalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/withdrawal_amount"
                    android:textColor="@color/dark_text_color"
                    android:inputType="numberSigned"
                    android:textSize="@dimen/_12sdp"
                    android:maxLength="6"
                    />


            </com.app.l_pesa.common.CommonInputLayout>

            <com.app.l_pesa.common.CustomButtonRegular
                android:id="@+id/buttonWithdraw"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/ripple_green_button"
                android:fontFamily="@font/montserrat"
                android:text="@string/withdraw"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@+id/commonInputLayout5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="@dimen/_2sdp"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="1"
        >

        <ImageButton
            android:id="@+id/imgTransactionHistory"
            android:contentDescription="@string/app_name"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:background="@drawable/ic_wallet_transaction_history_bg" />

        <ImageButton
            android:id="@+id/imgWithdrawalHistory"
            android:contentDescription="@string/app_name"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:background="@drawable/ic_wallet_withdrawal_history_bg" />

    </LinearLayout>

</LinearLayout>
</ScrollView>