<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txtToken"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:gravity="start|center"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_1sdp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/textColors"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtCreateDate"
                app:layout_constraintBottom_toTopOf="@+id/txtRef"
                android:text=""
                />

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txtCreateDate"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:drawableStart="@drawable/ic_request_date"
                android:fontFamily="@font/montserrat"
                android:text=""
                android:drawablePadding="@dimen/_3sdp"
                android:textColor="@color/colorTextBlackLight"
                android:textSize="@dimen/_10sdp"
                android:gravity="start|center"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_2sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtToken"
                app:layout_constraintTop_toTopOf="@+id/txtToken"
                app:layout_constraintBottom_toTopOf="@+id/txtRef"
                />

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txtRef"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_1sdp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/light_text_color"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCreateDate"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="start|center"
               />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>