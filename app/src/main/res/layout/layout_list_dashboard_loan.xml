<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:id="@+id/ll_root"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"

        >
        <RelativeLayout
            android:layout_weight=".15"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"

            >
            <ImageView
                android:id="@+id/loan_image"
                app:srcCompat="@drawable/ic_dashboard"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight=".50"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:paddingLeft="5dp"

            >

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_loan_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""

                android:textSize="@dimen/_13sdp"
                android:maxLines="1"/>

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_loan_details"
                android:layout_below="@+id/txt_loan_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="@color/semi_light_black"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>

        <View
            android:id="@+id/view_vertical_divider"
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:background="#d9d9d9"

            />

        <RelativeLayout
            android:layout_weight=".30"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:paddingLeft="3dp"

            >


            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_amount_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""

                android:textSize="@dimen/_13sdp"
                android:maxLines="1"/>

            <com.app.l_pesa.common.CustomButtonRegular
                android:id="@+id/btn_apply_loan"
                android:visibility="gone"
                android:layout_width="85dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"

                android:text="@string/apply_loan"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                />

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_amount_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_amount_first"
                android:textColor="@color/colorRed"
                android:text=""
                android:layout_marginTop="3dp"
                android:textSize="@dimen/_11sdp" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_center"
        android:layout_below="@+id/ll_top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >

        <RelativeLayout
            android:layout_weight=".70"
            android:layout_height="match_parent"
            android:layout_width="0dp"

            />

        <RelativeLayout
            android:layout_weight=".30"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center|top"
            android:paddingLeft="3dp"


            >

            <com.app.l_pesa.common.CustomButtonRegular
                android:id="@+id/btn_pay_now"
                android:layout_width="85dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"

                android:text="@string/apply_loan"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_below="@+id/ll_center"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#d9d9d9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"

        />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_below="@+id/view_divider"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >

        <com.app.l_pesa.common.CommonTextRegular
            android:layout_marginLeft="5dp"
            android:id="@+id/txt_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/colorSemiBlack"
          />

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/seek_bar"
            android:layout_marginTop="3dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:dsb_trackHeight="4dp"
            app:dsb_min="0"
            app:dsb_scrubberHeight="4dp"
            app:dsb_trackColor="#ff2f22"
            app:dsb_progressColor="#01bfa5"

            />

        <RelativeLayout

            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_MIN"
                android:text="0"
                android:gravity="start"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/semi_light_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_MAX"
                android:gravity="end"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/semi_light_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>



    </LinearLayout>


</RelativeLayout>

