<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@color/colorWhite"
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:padding="@dimen/_3sdp">

        <ImageView
            android:id="@+id/imgLoan"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/lpk_round_logo" />

        <com.app.l_pesa.common.CommonTextRegular
            android:id="@+id/txt_loan_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/dark_text_color"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toStartOf="@+id/view45"
            app:layout_constraintStart_toEndOf="@+id/imgLoan"
            app:layout_constraintTop_toTopOf="@+id/imgLoan" />

        <com.app.l_pesa.common.CommonTextRegular
            android:id="@+id/textView75"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintBottom_toBottomOf="@+id/imgLoan"
            app:layout_constraintEnd_toStartOf="@+id/view45"
            app:layout_constraintStart_toEndOf="@+id/imgLoan"
            app:layout_constraintTop_toBottomOf="@+id/txt_loan_type" />

        <View
            android:id="@+id/view45"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_apply_loan"
            app:layout_constraintStart_toEndOf="@+id/txt_loan_type"
            app:layout_constraintTop_toTopOf="parent" />

        <com.app.l_pesa.common.CustomButtonRegular
            android:id="@+id/btn_apply_loan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:background="@drawable/bg_button_grey"
            android:fontFamily="@font/montserrat"
            android:text="@string/apply_loan"
            android:textAllCaps="false"
            android:textColor="@color/colorSemiWhite"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view45"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>


</LinearLayout>




