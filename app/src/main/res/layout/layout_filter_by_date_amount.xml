<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">


        <LinearLayout
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorApp"
            android:orientation="vertical">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_3sdp">


                <ImageView
                    android:id="@+id/imgCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_white_cross" />

                <TextView
                    android:id="@+id/txtFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_17sdp"
                    android:fontFamily="@font/montserrat"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgCancel"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.app.l_pesa.common.CustomButtonRegular
                    android:id="@+id/buttonReset"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/bg_transparent_border_white_view"
                    android:text="@string/reset"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.95"
                    app:layout_constraintStart_toEndOf="@+id/txtFilter"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                 <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_7sdp">

                <com.app.l_pesa.common.CommonInputLayout
                    android:id="@+id/commonInputLayout19"
                    style="@style/customInputLayoutStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintEnd_toStartOf="@+id/commonInputLayout18"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.app.l_pesa.common.CommonEditTextRegular
                        android:id="@+id/etFromDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/from_date"
                        android:textColor="@color/textColors"
                        android:textSize="@dimen/_12sdp"
                        app:fontFamily="@font/montserrat"
                        android:drawableEnd="@drawable/ic_request_date"
                        android:cursorVisible="false"
                        android:longClickable="false"
                        android:inputType="date"
                        android:focusable="false"/>

                </com.app.l_pesa.common.CommonInputLayout>

                <com.app.l_pesa.common.CommonInputLayout
                    android:id="@+id/commonInputLayout18"
                    style="@style/customInputLayoutStyle"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_width="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/commonInputLayout19"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.app.l_pesa.common.CommonEditTextRegular
                        android:id="@+id/etToDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/to_date"
                        android:textColor="@color/textColors"
                        android:textSize="@dimen/_12sdp"
                        app:fontFamily="@font/montserrat"
                        android:drawableEnd="@drawable/ic_request_date"
                        android:cursorVisible="false"
                        android:longClickable="false"
                        android:inputType="date"
                        android:focusable="false" />


                </com.app.l_pesa.common.CommonInputLayout>



            </android.support.constraint.ConstraintLayout>

                   <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/_7sdp"
                    android:paddingEnd="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_7sdp">

                    <com.app.l_pesa.common.CommonInputLayout
                        android:id="@+id/commonInputLayout20"
                        style="@style/customInputLayoutStyle"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:layout_constraintEnd_toStartOf="@+id/commonInputLayout21"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.app.l_pesa.common.CommonEditTextRegular
                            android:id="@+id/etFromAmount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/from_amount"
                            android:textColor="@color/textColors"
                            android:textSize="@dimen/_12sdp"
                            app:fontFamily="@font/montserrat"
                            android:cursorVisible="false"
                            android:inputType="numberSigned"
                            android:maxLength="6"
                            />

                    </com.app.l_pesa.common.CommonInputLayout>

                    <com.app.l_pesa.common.CommonInputLayout
                        android:id="@+id/commonInputLayout21"
                        style="@style/customInputLayoutStyle"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/commonInputLayout20"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.app.l_pesa.common.CommonEditTextRegular
                            android:id="@+id/etToAmount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/to_amount"
                            android:textColor="@color/textColors"
                            android:textSize="@dimen/_12sdp"
                            app:fontFamily="@font/montserrat"
                            android:cursorVisible="false"
                            android:inputType="numberSigned"
                            android:maxLength="6"/>


                    </com.app.l_pesa.common.CommonInputLayout>

                       <com.app.l_pesa.common.CustomButtonRegular
                           android:id="@+id/buttonFilterSubmit"
                           android:layout_width="@dimen/_120sdp"
                           android:layout_height="@dimen/_30sdp"
                           android:background="@drawable/ripple_green_button"
                           android:text="@string/search"
                           android:textAllCaps="false"
                           android:layout_marginTop="@dimen/_20sdp"
                           app:layout_constraintTop_toBottomOf="@+id/commonInputLayout21"
                           android:textColor="@color/colorPrimaryDark"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>