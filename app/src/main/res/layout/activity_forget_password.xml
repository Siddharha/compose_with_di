<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="15"
    android:background="@color/screenBackground">

    <com.app.l_pesa.common.CommonTextRegular
        android:id="@+id/txtHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:text="@string/forgot_password"
        android:gravity="center"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorAccent"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginTop="@dimen/_12sdp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_37sdp"
        android:background="@drawable/bg_white_view"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.25"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilMobile"
                style="@style/customInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tieMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone_no"
                    android:inputType="numberSigned"
                    android:maxLength="13"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    app:autoSizeMaxTextSize="@dimen/_14sdp"
                    app:autoSizeMinTextSize="@dimen/_10sdp"
                    app:autoSizeStepGranularity="0.2sp"
                    app:autoSizeTextType="uniform"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <com.app.l_pesa.common.CommonTextRegular
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/or"
            android:gravity="center"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/colorSemiBlack"
            android:textAllCaps="true"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilEmail"
                style="@style/customInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tieEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_address"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:textSize="@dimen/_12sdp"
                    app:autoSizeMaxTextSize="@dimen/_14sdp"
                    app:autoSizeMinTextSize="@dimen/_10sdp"
                    app:autoSizeStepGranularity="0.2sp"
                    app:autoSizeTextType="uniform"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <com.app.l_pesa.common.CommonTextRegular
            android:id="@+id/txtSubmit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.75"
            android:text="@string/submit"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/colorSemiBlack"
            android:textAllCaps="true"
            android:background="@drawable/bg_yellow_bg"

            />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/lpesa_logo" />

    </RelativeLayout>




</LinearLayout>

