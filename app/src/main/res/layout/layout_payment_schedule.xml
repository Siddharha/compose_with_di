<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:background="@drawable/bg_white_view">

        <RelativeLayout
            android:id="@+id/rl_row_first"
            android:layout_width="match_parent"
            android:layout_height="62dp">

            <ImageView
                android:id="@+id/img_applied_calender"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                />

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_request_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7c7c7c"
                android:text="Repay Amount:"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/_11sdp"
                android:layout_toRightOf="@+id/img_applied_calender"/>

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_request_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#353535"
                android:text=""
                android:layout_marginTop="2dp"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/_11sdp"
                android:layout_toRightOf="@+id/img_applied_calender"
                android:layout_below="@+id/txt_request_date"/>

            <View
                android:id="@+id/view_coloum_first"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:background="@color/color_gray_light"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/img_approved_calender"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/view_coloum_first"
                android:layout_centerVertical="true"
              />

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_img_approved_calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7c7c7c"
                android:text="Current Balance:"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/_11sdp"
                android:layout_toRightOf="@+id/img_approved_calender"/>

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_img_approved_calender_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#353535"
                android:text=""
                android:layout_marginTop="2dp"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/_11sdp"
                android:layout_toRightOf="@+id/img_approved_calender"
                android:layout_below="@+id/txt_img_approved_calender"/>

        </RelativeLayout>

        <View
            android:id="@+id/view_center_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/color_gray_light"
            android:layout_below="@+id/rl_row_first"/>


        <RelativeLayout
            android:id="@+id/rl_row_second"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_below="@+id/view_center_line">


            <ImageView
                android:id="@+id/img_loan_duration"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
               />

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_img_loan_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7c7c7c"
                android:text="Repay Date:"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/_11sdp"
                android:layout_toRightOf="@+id/img_loan_duration"/>

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_img_loan_duration_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#353535"
                android:text=""
                android:layout_marginTop="2dp"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/_11sdp"
                android:layout_toRightOf="@+id/img_loan_duration"
                android:layout_below="@+id/txt_img_loan_duration"/>


            <View
                android:id="@+id/view_coloum_second"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_gray_light"
                android:layout_centerHorizontal="true"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rl_payment_section"
                android:visibility="gone"
                android:layout_toRightOf="@+id/view_coloum_second">

                <ImageView
                    android:id="@+id/img_status"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    />

                <com.app.l_pesa.common.CommonTextRegular
                    android:id="@+id/txt_img_status_calender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorApp"
                    android:text="Paid Successful:"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="@dimen/_11sdp"
                    android:layout_toRightOf="@+id/img_status"/>

                <com.app.l_pesa.common.CommonTextRegular
                    android:id="@+id/txt_img_status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#353535"
                    android:text=""
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="@dimen/_11sdp"
                    android:layout_toRightOf="@+id/img_status"
                    android:layout_below="@+id/txt_img_status_calender"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pay_now"
                android:layout_width="125dp"
                android:layout_height="32dp"
                android:layout_toRightOf="@+id/view_coloum_second"
                android:layout_centerInParent="true"
                android:layout_marginLeft="40dp"
               >

                <com.app.l_pesa.common.CommonTextRegular
                    android:id="@+id/text_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>