<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".password.view.ChangePasswordActivity"
    tools:showIn="@layout/activity_change_password"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="@color/screenBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".50"
        android:orientation="vertical"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:orientation="vertical"
        android:weightSum="8"
        android:background="@drawable/bg_white_view"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            tools:ignore="NestedWeights"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilCurrentPassword"
                    style="@style/customInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/tieCurrentPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/current_password"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp"
                        app:autoSizeMaxTextSize="@dimen/_14sdp"
                        app:autoSizeMinTextSize="@dimen/_10sdp"
                        app:autoSizeStepGranularity="0.2sp"
                        app:autoSizeTextType="uniform"
                        />
                </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            tools:ignore="NestedWeights"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilNewPassword"
                style="@style/customInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tieNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    app:autoSizeMaxTextSize="@dimen/_14sdp"
                    app:autoSizeMinTextSize="@dimen/_10sdp"
                    app:autoSizeStepGranularity="0.2sp"
                    app:autoSizeTextType="uniform"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            tools:ignore="NestedWeights"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilConfirmNewPassword"
                style="@style/customInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tieConfirmNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_new_password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    app:autoSizeMaxTextSize="@dimen/_14sdp"
                    app:autoSizeMinTextSize="@dimen/_10sdp"
                    app:autoSizeStepGranularity="0.2sp"
                    app:autoSizeTextType="uniform"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            tools:ignore="NestedWeights"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:weightSum="1">
            <com.app.l_pesa.common.CustomButtonRegular
                android:id="@+id/buttonSubmit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".45"
                android:background="@drawable/bg_green_view"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorAppDeep"
                android:text="@string/submit"
                android:textAllCaps="true"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".10"
                />

            <com.app.l_pesa.common.CustomButtonRegular
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".45"
                android:background="@drawable/bg_grey_view"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorSemiBlack"
                android:text="@string/cancel"
                android:textAllCaps="true"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".50"
        android:orientation="vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="@drawable/bg_white_view"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <com.app.l_pesa.common.CommonTextRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorSemiBlack"
            android:text="@string/password_should"
            android:padding="@dimen/_4sdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/imgRuleOne"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_red_tick"
                />
            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_rule_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorRed"
                android:text="@string/password_rule_one"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/imgRuleTwo"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_red_tick"
                />
            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_rule_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorRed"
                android:text="@string/password_rule_two"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/imgRuleThree"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_red_tick"
                />
            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_rule_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorRed"
                android:text="@string/password_rule_three"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/imgRuleFour"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_red_tick"
                />
            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_rule_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorRed"
                android:text="@string/password_rule_four"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/imgRuleFive"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_red_tick"
                />
            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_rule_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorRed"
                android:text="@string/password_rule_five"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>