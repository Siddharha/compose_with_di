<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/screenBackground"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp">

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txtReqToken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_token"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toTopOf="@+id/txtCreateDate"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/dark_text_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txtCreateDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableStart="@drawable/ic_calendar_icon"
                android:drawablePadding="@dimen/_3sdp"
                android:fontFamily="@font/montserrat"
                android:gravity="start|center"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/light_text_color"
                app:layout_constraintBottom_toTopOf="@+id/txtStatus"
                app:layout_constraintEnd_toStartOf="@+id/view46"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtReqToken" />

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/light_text_color"
                app:layout_constraintBottom_toTopOf="@+id/txtReason"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCreateDate" />

            <com.app.l_pesa.common.CustomButtonRegular
                android:id="@+id/buttonStatus"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_27sdp"
                android:padding="@dimen/_3sdp"
                android:textAllCaps="false"
                android:textSize="@dimen/_10sdp"
                android:text="@string/ether_scan_url"
                android:textColor="@color/colorSemiWhite"
                android:background="@drawable/blue_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txtReason"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_3sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/dark_text_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view46"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtStatus" />

            <View
                android:id="@+id/view46"
                android:visibility="invisible"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:background="@color/divider_color"
                android:layout_marginRight="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonStatus"
                android:layout_marginLeft="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@+id/txtCreateDate"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>