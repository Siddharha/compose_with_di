<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".loanplan.view.LoanApplyActivity"
    tools:showIn="@layout/activity_loan_apply"
    android:background="@color/screenBackground">


    <RelativeLayout
        android:id="@+id/llRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/screenBackground">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_white_view"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            tools:ignore="NestedWeights">

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="@string/choose_loan_purpose_description"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/_13sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"

                />


            <LinearLayout
                android:id="@+id/llDescription"
                android:layout_below="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="NestedWeights"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                >

                <com.app.l_pesa.common.CommonInputLayout
                    android:id="@+id/tilChooseDescription"
                    style="@style/customInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <com.app.l_pesa.common.CommonEditTextRegular
                        android:id="@+id/etChooseDescription"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/choose_description"
                        android:inputType="textNoSuggestions|text"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textSize="@dimen/_13sdp"
                        app:autoSizeMaxTextSize="@dimen/_14sdp"
                        app:autoSizeMinTextSize="@dimen/_10sdp"
                        app:autoSizeStepGranularity="0.2sp"
                        app:autoSizeTextType="uniform"
                        android:textColorHint="@color/colorGreyDeep"
                        android:drawableEnd="@drawable/ic_dropdown"
                        />
                </com.app.l_pesa.common.CommonInputLayout>

            </LinearLayout>

          <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_loan_description"
                android:layout_below="@+id/llDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="@string/loan_purpose_description"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/_13sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <RelativeLayout
                android:id="@+id/rlPurpose"
                android:layout_below="@+id/txt_loan_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="NestedWeights"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="gone"
                >

                <com.app.l_pesa.common.CommonInputLayout
                    android:id="@+id/tilDescription"
                    style="@style/customInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.app.l_pesa.common.CommonEditTextRegular
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:inputType="textNoSuggestions|text|textMultiLine"
                        android:maxLength="500"
                        android:hint="@string/enter_purpose"
                        android:textSize="@dimen/_13sdp"
                        app:autoSizeMaxTextSize="@dimen/_14sdp"
                        app:autoSizeMinTextSize="@dimen/_10sdp"
                        app:autoSizeStepGranularity="0.2sp"
                        app:autoSizeTextType="uniform"
                        android:textColorHint="@color/colorGreyDeep"
                        android:longClickable="false"
                        android:gravity="start"

                        />
                </com.app.l_pesa.common.CommonInputLayout>

            </RelativeLayout>

            <com.app.l_pesa.common.CommonTextRegular
                android:id="@+id/txt_max_words"
                android:layout_below="@+id/rlPurpose"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|end"
                android:padding="@dimen/_3sdp"
                android:text="@string/max_500_words"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/colorTextBlackLight"
                android:textSize="@dimen/_10sdp"
                />



            <LinearLayout
                android:layout_below="@+id/txt_max_words"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                tools:ignore="NestedWeights"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:weightSum="1">

                <com.app.l_pesa.common.CustomButtonRegular
                    android:id="@+id/buttonSubmit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".45"
                    android:background="@drawable/bg_green_view"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorAppDeep"
                    android:text="@string/submit"
                    android:textAllCaps="true"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".10"
                    />

                <com.app.l_pesa.common.CustomButtonRegular
                    android:id="@+id/buttonCancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".45"
                    android:background="@drawable/bg_grey_view"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorGreyDeep"
                    android:text="@string/cancel"
                    android:textAllCaps="true"

                    />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>

