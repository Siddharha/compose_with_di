<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.view.ProfileEditMoreAboutActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sfMoreAbout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <com.app.l_pesa.common.CommonTextRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="Tell us something more about you"
                    android:textColor="@color/dark_text_color"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <com.app.l_pesa.common.CommonInputLayout
                        android:id="@+id/tilTypeEmp"
                        style="@style/customInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.app.l_pesa.common.CommonEditTextRegular
                            android:id="@+id/etEduLvl"
                            android:editable="false"
                            android:focusable="false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789._- "
                            android:hint="Your Education Level"
                            android:inputType="text"
                            android:maxLength="25"
                            android:maxLines="1"
                            android:textColor="@color/textColors"
                            android:textSize="@dimen/_12sdp" />

                    </com.app.l_pesa.common.CommonInputLayout>

                    <com.app.l_pesa.common.CommonInputLayout
                        android:id="@+id/tilNameEmp"
                        style="@style/customInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tilTypeEmp">

                        <com.app.l_pesa.common.CommonEditTextRegular
                            android:id="@+id/etNameEmp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 "
                            android:hint="Source Of Income"
                            android:focusable="false"
                            android:inputType="text"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:textColor="@color/textColors"
                            android:textSize="@dimen/_12sdp" />

                    </com.app.l_pesa.common.CommonInputLayout>

                    <com.app.l_pesa.common.CommonInputLayout
                        android:id="@+id/tilDepartment"
                        style="@style/customInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tilNameEmp">

                        <com.app.l_pesa.common.CommonEditTextRegular
                            android:id="@+id/etDepartment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusable="false"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789,- "
                            android:hint="Net Monthly Income"
                            android:inputType="text"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:textColor="@color/textColors"
                            android:textSize="@dimen/_12sdp" />

                    </com.app.l_pesa.common.CommonInputLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp">

                        <com.app.l_pesa.common.CustomButtonRegular
                            android:id="@+id/buttonSubmit"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_27sdp"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:background="@drawable/ripple_green_button"
                            android:text="@string/submit"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimaryDark"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/buttonCancel"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.app.l_pesa.common.CustomButtonRegular
                            android:id="@+id/buttonCancel"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_27sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/bg_grey_view"
                            android:text="@string/cancel"
                            android:textAllCaps="true"
                            android:textColor="@color/colorGreyDeep"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/buttonSubmit"
                            app:layout_constraintTop_toTopOf="@+id/buttonSubmit" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>