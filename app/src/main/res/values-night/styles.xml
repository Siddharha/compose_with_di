<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>

    </style>
    <style name="NavDrawerTextStyle" parent="AppTheme">
    <item name="android:textColor">@color/colorMenuTab</item>
    <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="MyAlertDialogTheme" parent="@android:style/Theme.Material.Dialog.Alert">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:windowNoTitle">true</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
</resources>
